@using System.Globalization

@foreach (var product in Products)
{
    <div class="col-md-3 mb-2">
        <a href="/ProductDetails/@product.Id">
            <div class="card">
                <img class="card-thumbnail" src="@product.ImageUrl" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">
                        @product.Price.ToString("c", CultureInfo.GetCultureInfo("pt-BR"))
                    </h5>
                </div>
            </div>
        </a>
    </div>
}

@code {
    [Parameter]
    public IEnumerable<ProductDto>? Products { get; set; }
}